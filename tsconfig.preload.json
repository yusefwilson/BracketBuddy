{
    // preload.ts needs to be compiled to CommonJS for Electron to work
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./build-electron",
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "baseUrl": ".", 
    "paths": {
      "@shared/*": ["src-shared/*"],
      "@electron/*": ["src-electron/*"]
    }
    },
    "include": [
        "src-electron/preload.ts"
    ],
    "exclude": []
}