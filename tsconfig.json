{
    "compilerOptions": {
        "target": "ES2020", // Specify ECMAScript target version
        "module": "esnext", // Use CommonJS for Node.js compatibility
        "strict": true, // Enable strict type checking
        "esModuleInterop": true, // Enable default imports for CommonJS modules
        "outDir": "./build-electron", // Output directory for compiled files
        "rootDir": "./src-electron", // Specify the root directory of your TypeScript files
        "moduleResolution": "bundler", // Use Node.js module resolution strategy
        "skipLibCheck": true, // Skip type checking for library files,
        "baseUrl": ".",
        "paths": {
            "tournament-organizer/components": [
                "node_modules/tournament-organizer/dist/components/index.d.ts"
            ],
            "tournament-organizer/interfaces": [
                "node_modules/tournament-organizer/dist/interfaces/index.d.ts"
            ],
            "@shared/*": [
                "src-shared/*"
            ],
            "@electron/*": [
                "src-electron/*"
            ]
        }
    },
    "include": [
        "src-electron/**/*",
        "src-shared/**/*"
    ], // Include all TypeScript files in the src/electron folder
    "exclude": [
        "node_modules",
        "src-electron/preload.ts"
    ] // Exclude node_modules from compilation
}